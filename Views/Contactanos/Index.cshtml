@model IEnumerable<PiesOla.Models.Contactanos>

<body style="background-color: #F7C2F2;">
<h2>Usuarios registrados en Cont√°ctanos</h2>

<table class="table table-hover">
     <thead class="thead-dark">
        <tr>
                <th scope="col">
                     @Html.DisplayNameFor(model => model.Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                    <th scope="col">
                    @Html.DisplayNameFor(model => model.Asunto)
                </th>
                   
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Mensaje)
                </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(model => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>

                  <th >
                    @Html.DisplayFor(model => item.Asunto)
                </th>
                   
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mensaje)
                </td>
            </tr>
        }
    </tbody>
</table>

<h1>@ViewData["Message"]</h1>
</body>