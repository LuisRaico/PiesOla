@model PiesOla.Models.Producto
@{
    ViewData["Title"] = "Informacion";
}
<br>
<br>
<body style="background-color: #F7C2F2;">
<div class="container">
    <div class="card" style="border: none;background-color: #F7C2F2; ">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <a asp-area="" asp-controller="Home" asp-action="Info">
                    <img class="card-img-top" 
                    style="height: 300px; width: 100%; " src="@Model.imagen">
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <h4 style="text-align: center;" class="colorForm">@Model.Codigo</h4>
                <hr>
                <ul class="list-unstyled">
                    <li>
                        <p class="colorForm">Descripci√≥n: @Model.Descripcion</p>
                        <hr>
                    </li>
                    <li>
                        <p Class="colorForm">Material: @Model.Material</p>
                    </li>
                    <li>
                        <p Class="colorForm">Marca: @Model.Marca</p>
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
                <h4 style="text-align: center;" class="colorForm">Precio:</h4>
                <hr>
                <ul class="list-unstyled" style="text-align: center;">
                    <li class="colorForm">@Model.Precio</li>
                    <hr><a asp-controller="Catalogo" asp-action="Index">
                    <button class="btn btn-info">Regresar</button></a>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="container">
      
          <div class="carrusel">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://www.abnormalshop.com/wp-content/uploads/2020/07/web-24-horas-nuevo-gif.gif" alt="First slide" width="500" height="500">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://www.abnormalshop.com/wp-content/uploads/2020/07/web-24-horas-nuevo-gif.gif" alt="Second slide"width="500" height="500">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://www.abnormalshop.com/wp-content/uploads/2020/07/web-24-horas-nuevo-gif.gif" alt="Third slide"width="500" height="500">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
</body>
