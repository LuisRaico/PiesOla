@model PiesOla.Models.Proforma

@{
    ViewData["Title"] = "Edit";
}
<body style="background-color: #F7C2F2;">
<h1>Modificar Cantidad</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Proforma" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="Precio" />
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Cantidad:</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group " style="">
                <input type="submit" style="background-color: white; color:black" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="color:black;">
    <a asp-action="Index" >Regresar</a>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}