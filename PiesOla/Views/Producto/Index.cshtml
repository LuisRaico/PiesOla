@model PiesOla.Models.Producto

@{
    ViewData["Title"] = "Registro de Prendas";
}



<section id="catalogue" class="catalogue section-bg" style="text-align: center;">
<div class="section-title">
          <h2 >Registro de Prendas</h2>
          <p>Registra las Prenda completando el siguiente formulario</p>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">

   <form asp-controller="Producto" asp-action="Enviar" class="row g-3">
  <div class="col-md-6">
    <label asp-for="Marca" class="form-label">Marca</label>
    <input asp-for="Marca" class="form-control" >
  </div>
  <div class="col-md-6">
    <label asp-for="Codigo" class="form-label">Codigo</label>
    <input asp-for="Codigo" class="form-control" >
  </div>
  <div class="col-12">
    <label asp-for="Material" class="form-label">Material</label>
    <input asp-for="Material" class="form-control"  >
  </div>
  <div class="col-12">
    <label asp-for="Descripcion" class="form-label">Descripcion</label>
    <input asp-for="Descripcion" class="form-control"  >
  </div>
  <div class="col-12">
   <label asp-for="Color" class="form-label">Color </label>
    <input asp-for="Color" class="form-control" >
  </div>
  <div class="col-md-6">
     <label asp-for="Stock" class="form-label">Stock</label>
    <input asp-for="Stock" class="form-control" id="inputCity">
  </div>
  
  <div class="col-md-6">
    <label asp-for="Precio" class="form-label">Precio</label>
    <input asp-for="Precio"  class="form-control" id="inputZip">
  </div>
  <div class="col-md-12">
    <label asp-for="imagen" class="form-label">Imagen</label>
    <input asp-for="imagen" class="form-control" id="inputZip">
  </div>
  <div class="col-12">
    
  </div>
  <br>
  
            <div class="form-group text-center" >
              <button type="submit" class="btn btn-success">Registrar</button>
               <button asp-action="Listar" class="btn btn-info">Almacen</button>
              <button asp-action="Listar" class="btn btn-secondary"> Cancelar</button>
              </div>
              
   </form>

</div>
</div>
</div>

</section>

