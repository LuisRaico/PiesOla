@model PiesOla.Models.Producto

@{
    ViewData["Title"] = "Usuario";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<section id="catalogue" class="catalogue section-bg" style="text-align: center;">

<div class="section-title">
          <h2>Editar Prenda Registrados</h2>
          <p>Edita La Prenda registrada completando el siguiente formulario</p>
</div>

<div class="container">
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Producto" asp-action="Edit" class="row g-3">
  <div class="col-md-6">
    <label asp-for="Marca" class="form-label">Marca</label>
    <input asp-for="Marca" class="form-control" >
  </div>
  <div class="col-md-6">
    <label asp-for="Codigo" class="form-label">Codigo</label>
    <input asp-for="Codigo" class="form-control" >
  </div>
  <div class="col-12">
    <label asp-for="Material" class="form-label">Material</label>
    <input asp-for="Material" class="form-control"  >
  </div>
  <div class="col-12">
    <label asp-for="Descripcion" class="form-label">Descripcion</label>
    <input asp-for="Descripcion" class="form-control"  >
  </div>
  <div class="col-12">
   <label asp-for="Color" class="form-label">Color </label>
    <input asp-for="Color" class="form-control" >
  </div>
  <div class="col-md-6">
     <label asp-for="Stock" class="form-label">Stock</label>
    <input asp-for="Stock" class="form-control" id="inputCity">
  </div>
  
  <div class="col-md-6">
    <label asp-for="Precio" class="form-label">Precio</label>
    <input asp-for="Precio"  class="form-control" id="inputZip">
  </div>
  <div class="col-md-12">
    <label asp-for="imagen" class="form-label">Imagen</label>
    <input asp-for="imagen" class="form-control" id="inputZip">
  </div>
  <div class="col-12">
    
  </div>
             <br>
            <div class="form-group center">
                 <button type="submit" class="btn btn-success">Actualizar</button> 
                <button  class="btn btn-danger"  onclick="window.location='@Url.Action("Listar", "Producto")'" >Cancelar</button> 
            </div>                

        </form>
            
        <td>@Html.DisplayTextFor(model => model.Respuesta)</td>    
    
    </div>
</div>
</div>
</section>

<script>
    document.querySelector('#Editar').addEventListener('submit', function(e) {
      var form = this;
      
      e.preventDefault();
      
      swal({
          title: "¿Está seguro de la acción?",
          text: "Esto cambiará los datos del producto",
          icon: "warning",
          buttons: [
            'Cancelar',
            'Continuar'
          ],
          dangerMode: true,
        }).then(function(isConfirm) {
          if (isConfirm) {
           
              form.submit();
          
          } else {
            swal("Acción cancelada", "El producto no se ha modificado", "error");
          }
        });
    });

    
  </script>
  
  <style>
    .swal-button--confirm {
      background-color: #DD6B55;
    }
  </style>
